rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Songs can be read by anyone, but only created/updated/deleted by authenticated users/owners/admins
    match /songs/{songId} {
      allow read: if true;
      allow list: if true;
      allow create: if request.auth != null;
      allow update, delete: if get(/databases/$(database)/documents/songs/$(songId)).data.userId == request.auth.uid || 
                               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true;
    }

    // Setlists can be read if public or if the user is the owner. They can only be created/updated/deleted by the owner.
    match /setlists/{setlistId} {
      // Read: Anyone can read a public setlist. Authenticated users can read their own private setlists. Super admins can read all setlists.
      allow read: if resource.data.isPublic == true || 
                     (request.auth != null && resource.data.userId == request.auth.uid) ||
                     (request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true);
      
      // Create: Authenticated users can create setlists for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Update: Only the owner of the setlist can update it. Check ownership from existing document.
      allow update: if get(/databases/$(database)/documents/setlists/$(setlistId)).data.userId == request.auth.uid ||
                       (request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true);

      // Delete: Only the owner of the setlist can delete it.
      allow delete: if resource.data.userId == request.auth.uid ||
                      (request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true);
    }

    // Allow Super Admins to list all setlists for admin dashboard
    match /setlists/{document=**} {
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true;
    }

    // User's private sub-collections for songs and setlists
    match /users/{userId}/{collection}/{docId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
