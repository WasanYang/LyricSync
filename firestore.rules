rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own user document and subcollections.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Songs can be read by anyone, but only created by authenticated users.
    // Updates and deletes are restricted to the owner or a super admin.
    match /songs/{songId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                              (request.auth.uid == resource.data.userId || 
                               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true);
    }

    // Setlists can be read if public or if the user is the owner.
    // Create, update, and delete are restricted to the owner.
    match /setlists/{setlistId} {
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.userId);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
