
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Songs can be read by anyone, but only written by a super admin.
    match /songs/{songId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'esxy26@gmail.com';
    }

    // Setlists can only be accessed by the user who owns them.
    match /setlists/{setlistId} {
      // Allow reading a single document if the user is the owner.
      allow get: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow listing documents only when the query is filtered by the user's own ID.
      // This prevents users from listing all setlists in the database.
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
      
      // Allow creation if the new document's userId matches the user's ID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow updates and deletes if the user is the owner of the document being changed.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
