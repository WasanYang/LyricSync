rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for super admin status
    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true;
    }

    // Users can only manage their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Songs can be read by any authenticated user, but only written by admins
    match /songs/{songId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }

    // Setlists can be read if public, owned by user, or if user is a super admin.
    // Setlists can be created by any authenticated user.
    // Setlists can only be updated/deleted by the owner.
    match /setlists/{setlistId} {
      allow read: if resource.data.isPublic == true || request.auth.uid == resource.data.userId || isSuperAdmin();
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // The user's own list of setlists can only be managed by that user.
    match /users/{userId}/userSetlists/{setlistId} {
      allow read, create, delete: if request.auth.uid == userId;
    }
  }
}
